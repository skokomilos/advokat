<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView android:id="@+id/adapter_svestranke_brojredni"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/adapter_svestranke_addedit_imeprezime"
        android:hint="ime i prezime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="imeiprezimetag"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <EditText android:id="@+id/adapter_svestranke_addedit_adresa"
        android:hint="adresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="adresatag"
        android:focusableInTouchMode="true"
        android:focusable="true"/>

    <EditText android:id="@+id/adapter_svestranke_addedit_mesto"
        android:hint="mesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="mestotag"
        android:focusableInTouchMode="true"
        android:focusable="true"/>

</LinearLayout>